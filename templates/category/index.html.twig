{% extends 'base.html.twig' %}

{% block title %}Toutes les catégories{% endblock %}

{% block body %}
    <div class="container text-center mt-5">
        <h1>Toutes les categories</h1>
        {% for category in categories %}
            <div class="mt-3">
                <a class="text-decoration-none text-dark" href="{{ path("category_show", { categoryName: category.name }) }}">
                    <h2>{{ category.name }}</h2>
                </a>
            </div>
        {% else %}
            <div class="mt-3">
                <p>Aucune série trouvée</p>
            </div>
        {% endfor %}
        <div class="mt-5">
            <a class="btn bg-warning" href="{{ path('category_new') }}">Ajouter une categorie</a>
            <a class="btn bg-warning" href="{{ path('app_index') }}">Retour à l'accueil</a>
        </div>
    </div>
{% endblock %}