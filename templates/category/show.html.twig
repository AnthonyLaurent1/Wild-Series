{% extends 'base.html.twig' %}

{% block title %}{{ category.name }}{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mt-5">{{ category.name }}</h1>
            {% for program in programs %}
        <div class="d-flex flex-wrap justify-content-center m-5">
            <img class="mb-5" width="200px" height="150px" src="{{program.poster}}" alt="{{ program.title }} poster">
            <p>{{ program.summary }}</p>
            <a class="btn bg-warning" href="{{ path("program_show", { id: program.id }) }}">Voir la fiche</a>
        </div>
            {% else %}
                <p>Aucune série trouvée</p>
            {% endfor %}
        <div class="m-5">
            <a class="btn bg-warning" href="{{ path('category_index') }}">Retour à la liste des catégories</a>
        </div>
    </div>
{% endblock %}
