{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    <div class="media m-auto w-50">
        <div class="media-body">
            <h1 class="mb-5 text-center mt-4">{{ program.title }}</h1>
            <p>{{ season.description }}</p>
        </div>
        <div class="accordion" id="accordionExample">
            <h4>Episode {{ episode.number }} : {{ episode.title }}</h4>
            <p>{{ episode.synopsis }}</p>
        </div>
        <div>
            <h2>Commentaires</h2>
            {% for comment in comments %}
                <p>{{ comment.user.username }}</p>
                <p>{{ comment.comment }} - {{ comment.rate }}/5</p>
            {% endfor %}
        </div>
        <a class="btn btn-warning mt-5" href="{{ path('app_index') }}">Retour Ã  l'accueil</a>
        {% if app.user %}
        <div class="container mt-5">
            <h1 class="text-center mb-5">Ajouter un commentaire</h1>
            <div class="col-3 mx-auto">
                {{ form_start(form) }}
                {{ form_widget(form) }}
                <button type="submit">Ajouter</button>
                {{ form_end(form) }}
            </div>
        </div>
        {% endif %}
    </div>
{% endblock %}