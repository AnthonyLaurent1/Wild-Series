{% extends 'base.html.twig' %}

{% block title %}Programmes{% endblock %}

{% block body %}
    <div class="container">
        <h1>Toutes les séries</h1>
        {% for program in programs %}
            <div>
                <h2>{{ loop.index }} / {{ program.title }} - Catégorie : {{ program.category.name }}</h2>
                <p>{{ program.summary }}</p>
                <a href="{{ path("program_show", { id: program.id }) }}">Voir la fiche</a>
            </div>
        {% else %}
            <div>
                <p>Aucune série trouvée</p>
            </div>
        {% endfor %}
        <a class="btn btn-warning" href="{{ path('app_index') }}">Retour à l'accueil</a>
    </div>
{% endblock %}