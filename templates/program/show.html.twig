{% extends 'base.html.twig' %}

{% block title %}{{ program.title }}{% endblock %}

{% block body %}
    <div class="container tex-center d-flex">
        <div class="m-5">
            <img  width="500px" height="500px" src="{{program.poster}}" alt="{{ program.title }} poster">
        </div>
        <div class="m-5">
            <h1 class="text-center mt-3">{{ program.title }}</h1>
            <p>Catégorie : {{ program.category.name }}</p>
            <p>Année de sortie : {{ program.year }}</p>
            <p>{{ program.summary }}</p>
            {% for season in seasons %}
                <a class="btn btn-warning" href="{{ path('program_season_show', { program: program.id, season: season.id}) }}">{{ season.description }}</a></li>
            {% endfor %}
            <a class="btn btn-warning mt-5" href="{{ path('app_index') }}">Retour à l'accueil</a>
        </div>
    </div>
{% endblock %}